@model IndexFormModel
@{
    ViewData["Title"] = "Home Page";
}


<div class="container" id="carousel">
    <div class="row mb-5 mt-2">
        <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="../../THoCC_Logo17_RGB_WebRes.png" class="rounded mx-auto d-block d-block w-100" id="logoImage" style="height:500px" alt="image">
                </div>
                <div class="carousel-item">
                    <img src="/img/CarouselImg1.jpg" class="rounded mx-auto d-block w-auto" style="height:500px" alt="image">
                </div>
                <div class="carousel-item">
                    <img src="/img/CarouselImg2.jpg" class="rounded mx-auto d-block w-auto" style="height:500px" alt="image">
                </div>
                <div class="carousel-item">
                    <img src="/img/CarouselImg3.jpg" class="rounded mx-auto d-block w-auto" style="height:500px" alt="image">
                </div>
                <div class="carousel-item">
                    <img src="/img/CarouselImg4.jpg" class="rounded mx-auto d-block w-auto" style="height:500px" alt="image">
                </div>
                <div class="carousel-item">
                    <img src="/img/CarouselImg5.jpg" class="rounded mx-auto d-block w-auto" style="height:500px" alt="image">
                </div>
                <div class="carousel-item">
                    <img src="/img/CarouselImg6.jpg" class="rounded mx-auto d-block w-auto" style="height:500px" alt="image">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</div>

<hr />

<div class="container mt-5 mb-5">

    <div class="row" id="contact">
        <div class="col-sm-6 offset-sm-3">
            <h2 class="d-flex justify-content-center">Make An Inquiry</h2>
            <div class="contact-form">
                <form asp-area="" asp-controller="Home" asp-action="Index" method="post">
                    <div class="form-group">
                        <label asp-for="@Model.Name">Name:</label>
                        <input asp-for="@Model.Name" type="text" class="form-control" />
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Town">Town:</label>
                        <input asp-for="@Model.Town" type="text" class="form-control" />
                        <span asp-validation-for="@Model.Town" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Email">Email address:</label>
                        <input asp-for="@Model.Email" type="email" class="form-control"/>
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.PhoneNumber">Phone number:</label>
                        <input asp-for="@Model.PhoneNumber" type="tel" class="form-control"/>
                        <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Message">Message:</label>
                        <textarea asp-for="@Model.Message" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="@Model.Message" class="text-danger"></span>
                    </div>
                    <div class="mb-3 mt-2">
                        <input class="btn btn-success mb-2 w-100 p-3 fw-bold" type="submit" value="Send email" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>