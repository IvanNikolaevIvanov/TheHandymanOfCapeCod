    ViewData["Title"] = "Home Page";
}


<div class="container" id="carousel">
    <div class="row mb-5 mt-2">
        <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="../../THoCC_Logo17_RGB_WebRes.png" class="rounded mx-auto d-block d-block w-100" id="logoImage" style="height:500px" alt="image">
                </div>
                <div class="carousel-item">
                    <img src="/img/CarouselImg1.jpg" class="rounded mx-auto d-block w-auto" style="height:500px" alt="image">
                </div>
                <div class="carousel-item">
                    <img src="/img/CarouselImg2.jpg" class="rounded mx-auto d-block w-auto" style="height:500px" alt="image">
                </div>
                <div class="carousel-item">
                    <img src="/img/CarouselImg3.jpg" class="rounded mx-auto d-block w-auto" style="height:500px" alt="image">
                </div>
                <div class="carousel-item">
                    <img src="/img/CarouselImg4.jpg" class="rounded mx-auto d-block w-auto" style="height:500px" alt="image">
                </div>
                <div class="carousel-item">
                    <img src="/img/CarouselImg5.jpg" class="rounded mx-auto d-block w-auto" style="height:500px" alt="image">
                </div>
                <div class="carousel-item">
                    <img src="/img/CarouselImg6.jpg" class="rounded mx-auto d-block w-auto" style="height:500px" alt="image">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</div>

<hr />

<div class="container mt-5 mb-5">

    <div class="row" id="contact">
        <div class="col-sm-6 offset-sm-3">
            <h2 class="d-flex justify-content-center">Make An Inquiry</h2>
            <div class="contact-form">
                <form method="post">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" id="name" placeholder="Your name" name="name" />
                    </div>
                    <div class="form-group">
                        <label for="email">Email address</label>
                        <input type="email" class="form-control" id="email" placeholder="name@example.com" name="emailaddress" />
                    </div>
                    <div class="form-group">
                        <label for="number">Phone number</label>
                        <input type="tel" class="form-control" id="number" placeholder="your phone number" name="phonenumber" />
                    </div>
                    <div class="form-group">
                        <label for="message">Message</label>
                        <textarea class="form-control" id="message" rows="5" name="message"></textarea>
                    </div>
                    <div>
                        <input type="submit" value="Send email" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>