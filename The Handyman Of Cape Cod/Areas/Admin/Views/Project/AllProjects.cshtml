@model IEnumerable<ProjectViewModel>

@{
    ViewBag.Title = "All Projects";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <a asp-area="Admin" asp-controller="Project" asp-action="AddProject"
       class="btn btn-success m-3"><b>Add A New Project</b></a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th><label>#</label></th>
            <th><a asp-area="Admin" asp-controller="Project" asp-action="AllProjects" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.Title)</a></th>
            <th><a asp-area="Admin" asp-controller="Project" asp-action="AllProjects" asp-route-sortOrder="@ViewData["DateSortParm"]">@Html.DisplayNameFor(model => model.Date)</a></th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
        }
        @foreach (var project in Model)
        {
            i++;
            <tr>
                <td>
                    <label>@i</label>
                </td>
                <td>
                    <label>
                        <a asp-area="Admin" asp-controller="Project" asp-action="Details" asp-route-id="@project.Id">@project.Title</a>
                    </label>
                </td>
                <td>
                    <label>@project.Date</label>
                </td>
                @* <td>
            <a class="btn btn-warning m-1" asp-controller="Specialist" asp-action="EditSpecialist"
            asp-route-id="@project.Id">Details</a>
            </td> *@
            </tr>
        }

    </tbody>
</table>

