@model AddProjectFormModel

@{
    ViewBag.Title = "Add A New Project";
}

<h2 class="text-center">@ViewBag.Title</h2>

<hr/>

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-area="Admin" asp-controller="Project" asp-action="AddProject" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Title" class="form-label-add-edit">Title:</label>
                <input asp-for="@Model.Title" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ProjectStartDate" class="form-label-add-edit">Date:</label>
                <input asp-for="@Model.ProjectStartDate" class="form-control" aria-required="true" value="@DateTime.Now.ToString("yyyy-MM-dd H:mm")" />
                <span asp-validation-for="@Model.ProjectStartDate" class="text-danger"></span>
            </div>
